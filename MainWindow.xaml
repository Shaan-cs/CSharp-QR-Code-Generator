<Window x:Class="MyQrApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyQrApp"
        mc:Ignorable="d"
        Title="Premium QR Studio" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800"
        WindowStyle="SingleBorderWindow"
        Background="#FF1A1A2E">
    
    <!-- Main Grid Layout -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- === Left Panel: Controls === -->
        <Border Grid.Column="0" Background="#FF1F1F3A" Padding="30">
            <StackPanel VerticalAlignment="Center">
                
                <!-- Title -->
                <TextBlock Text="QR Studio" 
                           Foreground="White" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Left">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF6200EA" ShadowDepth="0" BlurRadius="15" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Create your code instantly." 
                           Foreground="#FFB0B0C0" 
                           FontSize="16" 
                           Margin="0,0,0,30"/>

                <!-- Text Input -->
                <TextBlock Text="Your Data (Link, Text, etc.)" 
                           Foreground="#FFB0B0C0" 
                           FontSize="14" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtData"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="120"
                         Padding="10"
                         Background="#FF2A2A4A"
                         Foreground="White"
                         BorderBrush="#FF4A4A6A"
                         BorderThickness="1"
                         FontSize="14"
                         VerticalScrollBarVisibility="Auto">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <!-- Generate Button -->
                <Button x:Name="btnGenerate" 
                        Content="Generate QR Code" 
                        Click="BtnGenerate_Click"
                        Height="50"
                        Foreground="White"
                        Background="#FF6200EA"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Margin="0,30,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="2" 
                                                                  Color="#FF6200EA" 
                                                                  Opacity="0.5" 
                                                                  BlurRadius="10"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF7F39FB"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF5100C3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <!-- === Right Panel: QR Code Display === -->
        <Border Grid.Column="1" Background="#FF1A1A2E" Padding="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <!-- QR Code Image Display -->
                <Border x:Name="qrBorder"
                        Width="350"
                        Height="350"
                        Background="#FF2A2A4A"
                        CornerRadius="12"
                        BorderBrush="#FF4A4A6A"
                        BorderThickness="1"
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.4"/>
                    </Border.Effect>
                    <Grid>
                        <TextBlock x:Name="tbPlaceholder" 
                                   Text="Your QR Code will appear here"
                                   Foreground="#FF707080"
                                   FontSize="16"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <Image x:Name="imgQrCode" 
                               Stretch="Uniform" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                </Border>

                <!-- Save Button (Initially hidden) -->
                <Button x:Name="btnSave" 
                        Content="Save as PNG" 
                        Click="BtnSave_Click"
                        Height="50"
                        Width="350"
                        Foreground="White"
                        Background="#FF03DAC5"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Margin="0,30,0,0"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="2" 
                                                                  Color="#FF03DAC5" 
                                                                  Opacity="0.5" 
                                                                  BlurRadius="10"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF35EAD8"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF01B09F"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
